{
  // Use `eslint` for vue, ts and js
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[js]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[ts]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "json"
  ],

  "files.exclude": {
    "**/node_modules": true
  }
}
